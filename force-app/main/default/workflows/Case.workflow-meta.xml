    <alerts>
        <fullName>Notification_for_New_CR_Case</fullName>
        <description>Notification for New CR Case</description>
        <protected>false</protected>
        <recipients>
            <field>SuppliedEmail</field>
            <type>email</type>
        </recipients>
        <senderAddress>noreply.serviceca@mhccna.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>unfiled$public/CR_New_Case_Notification</template>
